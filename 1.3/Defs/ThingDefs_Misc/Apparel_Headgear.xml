      </layers>
      <tags>
        <li>MedievalArmorElite</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  <ThingDef ParentName="HatMakeableBase">
