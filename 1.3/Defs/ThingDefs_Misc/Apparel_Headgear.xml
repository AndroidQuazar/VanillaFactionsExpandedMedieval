  <ThingDef ParentName="HatMakeableBase">
    <defName>VFEM_Apparel_KingsCrown</defName>
    <label>king's crown</label>
    <description>A beautiful metal crown. The wearer becomes very influential, but at the same time they will refuse to do any work.</description>
    <recipeMaker>
      <researchPrerequisite>VFEM_NobleMedievalApparel</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
	  <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/KingsCrown/KingsCrown</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costList>
      <Gold>2</Gold>
    </costList>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>10000</WorkToMake>
      <Mass>1.0</Mass>
      <EquipDelay>0.8</EquipDelay>
	  <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
	  <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
	  <ArmorRating_Heat>0.10</ArmorRating_Heat>
	  <Insulation_Cold>2</Insulation_Cold>
	  <Insulation_Heat>4</Insulation_Heat>
    </statBases>
    <techLevel>Medieval</techLevel>
    <equippedStatOffsets>
	  <NegotiationAbility>0.25</NegotiationAbility>
      <SocialImpact>0.25</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
      <PsychicEntropyRecoveryRate MayRequire="Ludeon.RimWorld.Royalty">0.083</PsychicEntropyRecoveryRate>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/KingsCrown/KingsCrown</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>MedievalApparelBasic</li>
		<li>King</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
	  <useDeflectMetalEffect>true</useDeflectMetalEffect>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
	<modExtensions>
		<li Class="VanillaApparelExpanded.ApparelExtension">
			<workDisables>
				<li>ManualDumb</li>
				<li>ManualSkilled</li>
				<li>Violent</li>
				<li>Caring</li>
				<li>Commoner</li>
				<li>Intellectual</li>
				<li>Animals</li>
				<li>Artistic</li>
				<li>Crafting</li>
				<li>Cooking</li>
				<li>Firefighting</li>
				<li>Cleaning</li>
				<li>Hauling</li>
				<li>PlantWork</li>
				<li>Mining</li>
				<li>Hunting</li>
				<li>Constructing</li>
				<li>Shooting</li>
			</workDisables>
		</li>
	</modExtensions>
  </ThingDef>

  <ThingDef ParentName="HatMakeableBase">
    <defName>VFEM_Apparel_PlagueMask</defName>
    <label>plague mask</label>
    <description>A mask with a long ‘beak’ filled with herbal medicine that keeps infected pawns at a distance.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PlagueMask/PlagueMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <costList>
      <MedicineHerbal>5</MedicineHerbal>
      <WoodLog>25</WoodLog>
    </costList>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>1.0</Mass>
      <EquipDelay>0.8</EquipDelay>
	  <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
	  <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
	  <ArmorRating_Heat>0.10</ArmorRating_Heat>
	  <Insulation_Cold>4</Insulation_Cold>
	  <Insulation_Heat>6</Insulation_Heat>
    </statBases>
    <techLevel>Medieval</techLevel>
    <equippedStatOffsets>
	  <ToxicSensitivity>-0.2</ToxicSensitivity>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">+0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>
	<tickerType>Normal</tickerType>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
	  <researchPrerequisite>VFEM_PlagueMask</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
    </recipeMaker>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PlagueMask/PlagueMask</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>MedievalApparelPlague</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
	<comps>
		<li Class="VFECore.CompProperties_ApparelHediffs">
			<hediffDefnames>
				<li>VFEM_PlagueMask</li>
			</hediffDefnames>
		</li>
	</comps>
  </ThingDef>

</Defs>