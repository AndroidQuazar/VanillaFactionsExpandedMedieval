  <ThingDef>
    <defName>VFEM_Apparel_KingsRobes</defName>
    <label>kingâ€™s robes</label>
    <description>A long robe worthy of a king. Extremely beautiful.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/KingsRobe/KingsRobe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType inherit="False">CutoutComplex</shaderType>
	  <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <costList>
      <Gold>8</Gold>
    </costList>
    <recipeMaker>
      <researchPrerequisite>VFEM_NobleMedievalApparel</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.35</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.0</EquipDelay>
	  <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-3</Beauty>
    </statBases>
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <drawerType>MapMeshOnly</drawerType>
    <selectable>True</selectable>
    <pathCost>14</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Medieval</techLevel>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <burnableByRecipe>true</burnableByRecipe>
    <smeltable>true</smeltable>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
		<li>Legs</li>
		<li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/KingsRobe/KingsRobe</wornGraphicPath>
      <layers>
		<li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <tags>
        <li>MedievalApparelNoble</li>
		<li>King</li>
      </tags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
    <equippedStatOffsets>
      <SocialImpact>0.3</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <comps inherit="False">
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
  </ThingDef>
  
