<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>VFEM_CobblestoneWall</defName>
    <label>cobblestone wall</label>
    <graphicData>
      <texPath>Things/Building/Linked/RockWall</texPath>
      <graphicClass>Graphic_Appearances</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Linked/RockWall_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>135</WorkToBuild>
      <Flammability>1.0</Flammability>
      <MeditationFocusStrength>0.22</MeditationFocusStrength>
      <Beauty>-2</Beauty>
    </statBases>
    <building>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/RockWall/RockWall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
    <costStuffCount>1</costStuffCount>
    <stuffCategories Inherit="False">
      <li>VFEM_StoneChunks</li>
    </stuffCategories>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Minimal</li>
        </focusTypes>
      </li>
    </comps>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>4</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>
  
  <!-- low wall -->
  <ThingDef ParentName="BuildingBase">
    <defName>VFEM_LowRockWall</defName>
    <label>low rock wall</label>
    <description>A waist high chunk wall. Very sturdy.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/Linked/RockLowWall/RockLowWall_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
    </graphicData>
    <uiIconPath>Things/Building/Linked/RockLowWall/RockLowWall_MenuIcon</uiIconPath>
    <uiIconScale>1.2</uiIconScale>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>100</pathCost>
    <pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.65</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Beauty>-3</Beauty>
      <WorkToBuild>460</WorkToBuild>
      <Flammability>1</Flammability>
    </statBases>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <isFence>true</isFence>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/RockLowWall/RockLowWall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <costStuffCount>1</costStuffCount>
    <stuffCategories Inherit="False">
      <li>VFEM_StoneChunks</li>
    </stuffCategories>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
  </ThingDef>

</Defs>