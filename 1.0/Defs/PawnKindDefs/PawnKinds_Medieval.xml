<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <PawnKindDef Name="MedievalBase" Abstract="True">
        <race>Human</race>
        <defaultFactionType>KingdomCivil</defaultFactionType>
        <backstoryCategories>
            <li>Tribal</li>
        </backstoryCategories>
        <maxGenerationAge>60</maxGenerationAge>
        <chemicalAddictionChance>0.05</chemicalAddictionChance>
        <invNutrition>2.55</invNutrition>
        <invFoodDef>Pemmican</invFoodDef>
        <apparelTags>
            <li>MedievalBasic</li>
        </apparelTags>
    </PawnKindDef>

    <!-- Poverty tier: Peasant -->
    <PawnKindDef ParentName="MedievalBase">
        <defName>Medieval_Peasant</defName>
        <label>peasant</label>
        <combatPower>35</combatPower>
        <chemicalAddictionChance>0.10</chemicalAddictionChance>
        <invNutrition>0</invNutrition>
        <itemQuality>Poor</itemQuality>
        <gearHealthRange>
            <min>0.2</min>
            <max>1.1</max>
        </gearHealthRange>
        <apparelMoney>
            <min>75</min>
            <max>125</max>
        </apparelMoney>
        <weaponMoney>
            <min>90</min>
            <max>150</max>
        </weaponMoney>
        <weaponTags>
            <li>NeolithicMeleeBasic</li>
        </weaponTags>
        <techHediffsMoney>
            <min>50</min>
            <max>50</max>
        </techHediffsMoney>
        <techHediffsTags>
            <li>Poor</li>
        </techHediffsTags>
        <techHediffsChance>0.15</techHediffsChance>
    </PawnKindDef>

    <!-- Mid-tier melee/ranged: Squire -->
    <PawnKindDef ParentName="MedievalBase">
        <defName>Medieval_Squire</defName>
        <label>squire</label>
        <combatPower>60</combatPower>
        <itemQuality>Normal</itemQuality>
        <canBeSapper>true</canBeSapper>
        <gearHealthRange>
            <min>0.5</min>
            <max>1.8</max>
        </gearHealthRange>
        <apparelMoney>
            <min>220</min>
            <max>300</max>
        </apparelMoney>
        <apparelRequired>
            <li>Apparel_PlateHelmetLight</li>
        </apparelRequired>
        <weaponMoney>
            <min>150</min>
            <max>150</max>
        </weaponMoney>
        <weaponTags>
            <li>MedievalMeleeBasic</li>
            <li>NeolithicRangedBasic</li>
        </weaponTags>
        <modExtensions>
            <li Class="VFEMedieval.PawnKindDefExtension">
                <shieldMoney>
                    <min>120</min>
                    <max>180</max>
                </shieldMoney>
                <shieldTags>
                    <li>MedievalBasic</li>
                </shieldTags>
            </li>
        </modExtensions>
    </PawnKindDef>

    <!-- High-tier melee: Knight -->
    <PawnKindDef Name="MedievalEliteMilitaryBase" ParentName="MedievalBase" Abstract="True">
        <apparelRequired>
            <li>Apparel_Tabard</li>
        </apparelRequired>
        <modExtensions>
            <li Class="VFEMedieval.PawnKindDefExtension">
                <shieldMoney>
                    <min>250</min>
                    <max>400</max>
                </shieldMoney>
                <shieldTags>
                    <li>MedievalAdvanced</li>
                </shieldTags>
            </li>
        </modExtensions>
    </PawnKindDef>

    <PawnKindDef ParentName="MedievalEliteMilitaryBase">
        <defName>Medieval_Knight</defName>
        <label>knight</label>
        <combatPower>90</combatPower>
        <canBeSapper>true</canBeSapper>
        <apparelMoney>
            <min>500</min>
            <max>800</max>
        </apparelMoney>
        <apparelRequired>
            <li>Apparel_PlateArmor</li>
            <li>Apparel_PlateHelmetLight</li>
        </apparelRequired>
        <weaponMoney>
            <min>300</min>
            <max>300</max>
        </weaponMoney>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
            <li>MedievalMeleeAdvanced</li>
        </weaponTags>
    </PawnKindDef>

    <!-- Top-tier: Lord -->
    <!-- Dan: Currently using both Chiefs' values as placeholders; replace as soon as possible -->
    <PawnKindDef ParentName="MedievalEliteMilitaryBase">
        <defName>Medieval_Lord</defName>
        <label>lord</label>
        <combatPower>130</combatPower>
        <baseRecruitDifficulty>0.90</baseRecruitDifficulty>
        <minGenerationAge>30</minGenerationAge>
        <maxGenerationAge>999</maxGenerationAge>
        <itemQuality>Good</itemQuality>
        <factionLeader>true</factionLeader>
        <canBeSapper>true</canBeSapper>
        <apparelMoney>
            <min>700</min>
            <max>1200</max>
        </apparelMoney>
        <apparelRequired>
            <li>Apparel_PlateArmorHeavy</li>
            <li>Apparel_PlateHelmetHeavy</li>
        </apparelRequired>
        <weaponMoney>
            <min>500</min>
            <max>1000</max>
        </weaponMoney>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
            <li>MedievalMeleeAdvanced</li>
            <li>NeolithicRangedChief</li>
        </weaponTags>
    </PawnKindDef>

</Defs>