<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>VFEM_Apparel_PlateHelmetLight</defName>
        <label>light plate helmet</label>
        <description>A lightweight medieval helmet that provides moderate protection against sharp attacks. Not effective against blunt weapons.</description>
        <techLevel>Medieval</techLevel>
        <recipeMaker>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/LightPlateHelmet/LightPlateHelmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costStuffCount>40</costStuffCount>
        <statBases>
            <WorkToMake>3200</WorkToMake>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>2</Mass>
            <StuffEffectMultiplierArmor>0.32</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>2.5</EquipDelay>
        </statBases>
        <generateCommonality>0.4</generateCommonality>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/LightPlateHelmet/LightPlateHelmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>MedievalArmorBasic</li>
                <li>MedievalArmorDecent</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>VFEM_Apparel_PlateHelmetHeavy</defName>
        <label>heavy plate helmet</label>
        <description>A bulky medieval helmet that provides full-head coverage. Offers a considerable amount of protectuon but restricts the wearer's field of vision.</description>
        <techLevel>Medieval</techLevel>
        <recipeMaker>
            <researchPrerequisite>PlateArmor</researchPrerequisite>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>9</Crafting>
            </skillRequirements>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/HeavyPlateHelmet/HeavyPlateHelmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <MaxHitPoints>150</MaxHitPoints>
            <Mass>3.5</Mass>
            <StuffEffectMultiplierArmor>0.55</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>4</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ShootingAccuracyPawn>-8</ShootingAccuracyPawn>
            <MeleeHitChance>-2</MeleeHitChance>
        </equippedStatOffsets>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>70</costStuffCount>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/HeavyPlateHelmet/HeavyPlateHelmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>MedievalArmorElite</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

</Defs>