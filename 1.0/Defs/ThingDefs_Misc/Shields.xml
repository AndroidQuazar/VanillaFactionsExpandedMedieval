                <shieldTags>
                    <li>MedievalDecent</li>
                </shieldTags>
                <useDeflectMetalEffect>true</useDeflectMetalEffect>
                <coveredBodyPartGroups>
                    <li>Torso</li>
                    <li>Arms</li>
                    <li>Hands</li>
