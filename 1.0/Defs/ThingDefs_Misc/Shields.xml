                </offHandGraphicData>
                <offHandHoldOffset>
                    <northDefault>
                        <offset>(0, 0, 0.2)</offset>
                        <behind>true</behind>
                    </northDefault>
                    <east>
                        <offset>(-0.05, 0, 0.2)</offset>
                        <behind>true</behind>
                    </east>
                    <south>
                        <offset>(0, -0.04, 0.2)</offset>
                    </south>
                    <west>
                        <offset>(0.05, 0, 0.2)</offset>
                    </west>
                </offHandHoldOffset>
            </li>
        </comps>
