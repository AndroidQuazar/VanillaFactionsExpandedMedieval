<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Patch appropriate weapons to be usable with shields -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDef[defName="MeleeWeapon_Mace"]</xpath>
        <value>
            <li Class="VFEMedieval.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDef[defName="MeleeWeapon_Gladius"]</xpath>
        <value>
            <li Class="VFEMedieval.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </value>
    </Operation>

    <!-- 'tis but a scratch -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="MeleeWeapon_LongSword"]/weaponTags</xpath>
        <value>
            <li>Longsword</li>
        </value>
    </Operation>

</Patch>