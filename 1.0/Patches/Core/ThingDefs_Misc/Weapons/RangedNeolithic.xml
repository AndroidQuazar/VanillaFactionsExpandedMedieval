<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Patch appropriate weapons to be usable with shields -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDef[defName="Pila"]</xpath>
        <value>
            <li Class="VFEMedieval.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </value>
    </Operation>

    <!-- Add weapon tag to greatbows -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Bow_Great"]/weaponTags</xpath>
        <value>
            <li>MedievalRanged</li>
        </value>
    </Operation>

</Patch>