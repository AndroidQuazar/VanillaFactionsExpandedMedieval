<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Patch appropriate weapons to be usable with shields -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>/Defs/ThingDef[defName="Pila"]</xpath>
        <value>
            <li Class="VFECore.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </value>
    </Operation>

    <!-- Add weapon tag to greatbows if Vanilla Weapons Expanded isn't active -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded</li>
        </mods>
        <nomatch Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Bow_Great"]/weaponTags</xpath>
                    <value>
                        <li>MedievalRanged</li>
                    </value>
                </li>

            </operations>
        </nomatch>
    </Operation>

</Patch>