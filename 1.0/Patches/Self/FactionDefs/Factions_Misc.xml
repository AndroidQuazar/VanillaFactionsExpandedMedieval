<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- If Editable Backstories is loaded, make the medieval factions use medieval backstories -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[RF] Editable Backstories and Names [1.0]</li>
        </mods>
        <match Class="PatchOperationReplace">
            <xpath>/Defs/FactionDef[@Name="VFE_MedievalFactionBase"]/backstoryCategories/li[text()="Tribal"]</xpath>
            <value>
                <li>Medieval</li>
            </value>
        </match>
    </Operation>

    <!-- If Vanilla Furniture Expanded: Security is loaded, medieval factions can siege -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded: Security</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/FactionDef[@Name="VFE_MedievalFactionBase"]</xpath>
                    <value>
                        <canSiege>true</canSiege>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/FactionDef[@Name="VFE_MedievalFactionBase"]/modExtensions/li[@Class="VanillaFactionsExpanded.FactionDefExtension"]</xpath>
                    <value>
                        <artilleryBuildingTags>
                            <li>ArtilleryMedieval_BaseDestroyer</li>
                        </artilleryBuildingTags>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>